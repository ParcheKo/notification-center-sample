{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "MonitoringSettings": {
    "Apps": [
      {
        "Name": "SalesManagement",
        "RootPath": "D:\\sales",
        "IncludeSubdirectories": false,
        "IsMonitored": true,
        "FileNameFilter": "*",
        "ChangesToMonitor": "Attributes,CreationTime,DirectoryName,FileName,LastAccess,LastWrite,Security,Size"
      }
    ]
  }
}
